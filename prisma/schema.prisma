generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Equipement {
  id                  Int         @id @default(autoincrement())
  code_imo            String      @unique
  nom_testeur         String
  nom_equipement      String
  designation         String
  date_mise_en_marche DateTime?
  arborescence        String?
  date_garantie       DateTime?
  categorie           String
  nombre              Int
  preventifs          Preventif[]
  rapports            Rapport[]
  missions            Mission[]   @relation("EquipementToMission")

  @@map("equipements")
}

model Preventif {
  id            Int        @id @default(autoincrement())
  titre         String
  description   String?
  date_prevue   DateTime?
  equipementId  Int
  equipement    Equipement @relation(fields: [equipementId], references: [id])
}

model Rapport {
  id            Int        @id @default(autoincrement())
  titre         String
  contenu       String?
  creeLe        DateTime   @default(now())
  equipementId  Int
  equipement    Equipement @relation(fields: [equipementId], references: [id])
}

model Mission {
  id            Int        @id @default(autoincrement())
  nom           String
  debut         DateTime?
  fin           DateTime?
  equipementId  Int
  equipement    Equipement @relation("EquipementToMission", fields: [equipementId], references: [id])
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
}
